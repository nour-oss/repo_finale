{% extends "base1.html.twig" %}

{% block body %}
<br><br><br>    
<div class="container">
    <div class="row">
    
<div class="col-md-6" style="height:600px; width:600px;" >
    <center>
    <canvas id="myChart" width="400" height="400"></canvas>
    </center>
</div>

<div class="col-md-6" style="height:600px; width:600px;" >
    <center>
    <canvas id="myChart1" width="400" height="400"></canvas>
    </center>
</div>
    </div>
</div>

    <script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: {{ formLabel | raw}},
        datasets: [{
            label: '# examens par formation',
            data: {{ formExams | raw }},
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>

