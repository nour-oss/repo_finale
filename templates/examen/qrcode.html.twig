{% extends "base.html.twig" %}
{% block nav %}
	<!-- Start header -->
	<header class="top-navbar">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="index.html">
					<img src="images/logo.png" alt="" />
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-host" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
					<span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbars-host">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item active"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="dropdown-a" data-toggle="dropdown">Formations </a>
							<div class="dropdown-menu" aria-labelledby="dropdown-a">
								{% for form in forms %}
								<a class="dropdown-item" href="{{ path('passer',{'id' : form.id}) }}">{{ form.titre }}</a>
								{% endfor %}
							</div>

						</li>
                        						<li class="nav-item active">
							{% for locale in locales %}
    {% if locale != app.request.locale %}
        <a class="nav-link" href="{{ path('change_locale', {'locale': locale}) }}"><img src="{{ asset('images/'~locale~'.png') }}" alt="{{locale}}" height="50px" width="50px"></a>
    {% endif %}
{% endfor %}
						</li>
						
				</div>
			</div>
		</nav>
	</header>
	<!-- End header -->
	
{% endblock %}
{% block body %}
<br><br><br><br><br>
<div class="container">
    <div class="row">
        <div class="col-md-6" style="background-color:#D8D8D8; border-radius: 25px;">
        <br>
        <br>
            <h1>{% trans %}Your QR code :{% endtrans %} </h1>
            <p>{% trans %}Scan it to get your score{% endtrans %}</p>
        </div>
        <div class="col-md-6">
            <img src="{{ qrCode }}" alt="" height="300px" width="300px">
        </div>
    </div>
</div>
<br><br><br><br><br>
{% endblock %}