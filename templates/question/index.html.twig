{% extends 'base1.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <h1>Question index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FormationId</th>
                <th>Question</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>
                    {% for formation in formations %}
                        {% if question.formationId == formation.id %}
                            {{formation.titre}}
                        {% endif %}
                        
                    {% endfor %}
                </td>
                <td>{{ question.question }}</td>
                <td>
                    <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
